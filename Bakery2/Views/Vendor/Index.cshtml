@using System.Collections.Generic;
@using Bakery2.Models;

<h1>Vendors</h1>
<h3>Click on Vendor name to view vendor details</h3>

@if (Model.Count == 0)
{
  <p>There are no vendors to show.</p>
}
<ul>
  @foreach (Vendor vendor in Vendor.vendors)
  {
    <li><a href='/vendors/@vendor.Id'>@vendor.Name, @vendor.Id</a></li>
  }
</ul>

<a href="/vendors/new">Add a new vendor</a>
<a href="/">Go back Home</a>

